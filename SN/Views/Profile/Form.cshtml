@using SN.Controllers
@model SN.Models.FormModel
@{
    ViewBag.Title = "Form";

}

    <link rel="stylesheet" href="~/css/bootstrap.css">
    <script src="~/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/rx.js")" type="text/javascript"></script> 
    <script src="@Url.Content("~/Scripts/rx.jquery.js")" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="~/Scripts/mdd_styles.css" />
    <script type="text/javascript" src="~/Scripts/jQuery-1.7.1.min.js"></script>

    <head>
        <title>
            @ViewBag.Title
        </title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>

    <hgroup class="title">
        <h1>@User.Identity.Name</h1> 
    </hgroup>


    <section id="Form">
    @using (Html.BeginForm("Form", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
    { 
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
  
      <div class="container">
	    <div class="row">
		     <form class="form-horizontal">
                <fieldset>
                    <div class="control-group">
                        <label class="control-label">Birth date</label>
                        <div class="controls">
                            @Html.EnumDropDownListFor(m => m.BirthMonth)  
                            @Html.DropDownListFor(m => m.BirthDay,  new SelectList(ViewBag.Days ))
                            @Html.DropDownListFor(m => m.BirthYear, new SelectList(ViewBag.Years))             
                            </div>
                    </div>
                    <p class="help-block">Enter new birth date</p>
                    <div class="control-group">
                        <label class="control-label">Your sex</label>
                        <div class="controls">
                            @Html.EnumDropDownListFor(m => m.WhichSex)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Are you in searching for a sex partner?</label>
                        <div class="controls">
                           @Html.EnumDropDownListFor(m => m.IsSearching)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Your sex preferences</label>
                        <div class="controls">
                            @Html.EnumDropDownListFor(m => m.SexPreferences)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Interests</label>
                        <div class="controls">
                            @Html.TextAreaFor(m => m.Interests)
                            <p class="help-block">Enter your interests here</p>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">About you</label>
                        <div class="controls">
                            @Html.TextAreaFor(m => m.About)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">If you want to change your photo, load it here</label>
                        <div class="controls">
                          <p><input type="file" id="fileUpload" name="Photo"/> </p>
                        </div>
                    </div>
                    <Button class="btn" type="submit" value="Save">Save</Button>
                </fieldset>
            </form>
	    </div>
    </div>
    }
    </section>

