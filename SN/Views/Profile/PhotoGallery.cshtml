@using SN.Models;
@{
    ViewBag.Title = "Photo Gallery";
}

<script src="~/js/bootstrap.min.js" type="text/javascript"></script>
<script src="~/Scripts/Messages.js" type="text/javascript"></script>
<script src="~/js/jquery-1.10.2.js"></script>
<script src="~/js/bootstrap.js"></script>

<head>
  <title>Photo Gallery</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <script src="~/fotorama-4.5.1/jquery.min.js"></script>
  <link href="~/fotorama-4.5.1/fotorama.css" rel="stylesheet">
  <script src="~/fotorama-4.5.1/fotorama.js"></script>

</head>

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))

{
    <body>
    <div class="fotorama">
        @for (int i = 0; i < ViewBag.Count; i++)
        {
            <img class="img-responsive" src="@Url.Content(ViewBag.PhotoGallery[i] as string)" />
        }   
    </div>
        @if (ViewBag.username == User.Identity.Name)    
        {
            <p class="lead"><strong><em>@Html.ActionLink("Click here to load a new photo", "AddPhoto", "Profile")</em></strong></p> 
        }
    </body>        
}
