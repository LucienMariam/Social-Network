@{
    ViewBag.Title = "The social network";
}
<link rel="stylesheet" href="~/css/bootstrap.css">
<script src="~/js/bootstrap.min.js" type="text/javascript"></script>
    <head>
        <title>SN</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css" href="~/css/mostpopular.css">
    </head>
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
            </hgroup>
        </div>
    </section>
}
<div class="container">
<div class="row">
    @for(int i = 0; i < 3; i ++)
    {
        <div class="col-md-3 col-sm-4 col-xs-6">
            
            <p class="text-info"><strong>@Html.ActionLink(ViewBag.users[i] as string, "ViewProfile", "Profile",   new { username = @ViewBag.users[i] }, null)</strong></p>
            <p id="like" class="glyphicon glyphicon-thumbs-up"><small>@ViewBag.likesCount[i]</small></p>
            <p id="dislike" class="glyphicon glyphicon-thumbs-down"><small>@ViewBag.disLikesCount[i]</small></p>
            <img class="img-responsive" src="@Url.Content(ViewBag.photo[i] as string)" />
        </div>
    }
</div>
    <div class="row">
    @for(int i = 3; i < 6; i ++)
    {
       <div class="col-md-3 col-sm-4 col-xs-6">
            <strong><p class="text-info">@Html.ActionLink(ViewBag.users[i] as string, "ViewProfile", "Profile",   new { username = @ViewBag.users[i] }, null)</p></strong>
            <p id="like1" class="glyphicon glyphicon-thumbs-up"><small>@ViewBag.likesCount[i]</small></p>
            <p id="dislike1" class="glyphicon glyphicon-thumbs-down"><small>@ViewBag.disLikesCount[i]</small></p>
           <img class="img-responsive" src="@Url.Content(ViewBag.photo[i] as string)" />            
        </div>        
    }
   </div>
