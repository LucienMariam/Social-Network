<!DOCTYPE html>
<html lang="ru">
    <link rel="stylesheet" href="~/css/bootstrap.css">
<script src="~/js/bootstrap.min.js" type="text/javascript"></script>

    <head>
        <title></title>
        <script src="~/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
        <script src="~/Scripts/LucoJS.js" type="text/javascript"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")

    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home page", "Index", "Home")</li>
                            <li>@Html.ActionLink("Search", "Index", "Search")</li>
                            @if (Request.IsAuthenticated)
                            {
                                <li>@Html.ActionLink("Form", "Form", "Profile")</li>
                                <li>@Html.ActionLink("Messages", "Messages", "Messages")</li>
                                <li>@Html.ActionLink("My profile", "ViewProfile", "Profile", new {username = @User.Identity.Name}, null)</li>
                                <li>@Html.ActionLink("Photo gallery", "PhotoGallery", "Profile",   new { username = @User.Identity.Name }, null)</li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                </div>
            </div>
        </footer>
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
